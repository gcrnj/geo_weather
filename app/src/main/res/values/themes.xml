<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.GeoWeather" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/sky_blue</item>
        <item name="colorPrimaryVariant">@color/dark_blue</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/light_blue</item>
        <item name="colorSecondaryVariant">@color/pale_blue</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <!--FULL SCREEN-->
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="Theme.GeoWeather.MaterialButton.ZeroInset" parent="Widget.MaterialComponents.Button">
        <item name="android:insetLeft">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetRight">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:textSize">@dimen/_15sdp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textStyle">bold</item>
    </style>


    <style name="TextAppearance.GeoWeather.TitleLarge" parent="TextAppearance.Material3.TitleLarge">
        <item name="android:fontFamily">@font/helvetica_neue_medium</item>
        <item name="fontFamily">@font/helvetica_neue_medium</item>
        <item name="android:textSize">@dimen/_17sdp</item>
    </style>

    <style name="TextAppearance.GeoWeather.TitleMedium" parent="TextAppearance.Material3.TitleMedium">
        <item name="android:fontFamily">@font/helvetica_neue_medium</item>
        <item name="fontFamily">@font/helvetica_neue_medium</item>
        <item name="android:textSize">@dimen/_12sdp</item>
    </style>

    <style name="TextAppearance.GeoWeather.TitleSmall" parent="TextAppearance.Material3.TitleSmall">
        <item name="android:fontFamily">@font/helvetica_neue_medium</item>
        <item name="fontFamily">@font/helvetica_neue_medium</item>
    </style>

    <style name="TextAppearance.GeoWeather.BodyLarge" parent="TextAppearance.Material3.BodyLarge">
        <item name="android:fontFamily">@font/helvetica_neue_medium</item>
        <item name="fontFamily">@font/helvetica_neue_medium</item>
        <item name="android:textSize">@dimen/_12sdp</item>
    </style>

    <style name="TextAppearance.GeoWeather.BodyMedium" parent="TextAppearance.Material3.BodyMedium">
        <item name="android:fontFamily">@font/helvetica_neue_medium</item>
        <item name="fontFamily">@font/helvetica_neue_medium</item>
    </style>

    <style name="TextAppearance.GeoWeather.BodySmall" parent="TextAppearance.Material3.BodySmall">
        <item name="android:fontFamily">@font/helvetica_neue_medium</item>
        <item name="fontFamily">@font/helvetica_neue_medium</item>
    </style>

</resources>